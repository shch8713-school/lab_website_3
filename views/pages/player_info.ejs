<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				<%var image_src = '../resources/img/helmet.jpg';

					if (player_info) {
					image_src = player_info.img_src
					}
				%>

				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <%
		 					if (data) {

		 						var drop_down = '';
		 						data.forEach(function(info) {
		 						drop_down += '<option value="' + info.id + '">'+ info.name + '</option>'

		 					});	%>
		 					<%- drop_down%>
		 				<%}
		 				  %>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id,
							 			but will display the player's name-->
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
								<form action="/player_info" method="post">
							<th>Year</th>
							<td>	<%
								if (player_info){%>
								<%- player_info.year%>
							<%	}
								%>
							</td>
						</tr>
						<tr>
							<th>Major</th>
							<td>	<%
								if (player_info){%>
								<%- player_info.major%>
							<%	}
								%></td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td>	<%
								if (games_played){%>
								<%- games_played.count%>
							<%	}
								%></td>
						</tr>
						<tr>
							<td>Passing Yards: <%
								if (player_info){%>
								<%- player_info.passing_yards%>
							<%	}
								%></td>
							<td>Avg. Passing Yards: <%- player_info.passing_yards/games_played.count%></td>
						</tr>
						<tr>
							<td>Rushing Yards: <%
								if (player_info){%>
								<%- player_info.rushing_yards%>
							<%	}
								%></td>
							<td>Avg. Rushing Yards: <%- player_info.rushing_yards/games_played.count%></td>
						</tr>
						<tr>
							<td>Receiving Yards: <%
								if (player_info){%>
								<%- player_info.receiving_yards%>
							<%	}
								%></td>
							<td>Avg. Receiving Yards: <%- player_info.receiving_yards/games_played.count%></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
